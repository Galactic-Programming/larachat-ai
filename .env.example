### OpenAI API Configuration
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# Default AI Model Settings (can be overridden per-user via session)
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_DEFAULT_TEMPERATURE=0.3
OPENAI_DEFAULT_MAX_TOKENS=1500

### AI Configuration (Groq - FREE API)
GROQ_API_KEY=

### Broadcasting Configuration (Laravel Reverb - WebSocket)
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

### Vite Environment Variables for Frontend
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"
